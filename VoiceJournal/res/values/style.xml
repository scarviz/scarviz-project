<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="defaultTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">50px</item>
        <item name="android:textStyle">bold</item>
    </style>

	<style name="CustomTheme.Black" parent="@android:style/Theme.Black">
	    <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
		<item name="android:textAppearance">@style/TextAppearance.WindowTitle</item>
	    <item name="android:windowTitleSize">55dip</item>
	</style>

	<style name="CustomTheme.main" parent="@android:style/Theme.Black">
	    <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
		<item name="android:textAppearance">@style/TextAppearance.WindowTitle</item>
	    <item name="android:windowTitleSize">40dip</item>
	</style>
	
	<style name="WindowTitleBackground">
		<item name="android:background">@drawable/btn_media_player_disabled</item>
	</style>
	
	<style name="TextAppearance.WindowTitle" parent="@android:style/TextAppearance.WindowTitle">
		<item name="android:textColor">#fff</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold</item>
	</style>
</resources>
