<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.scarviz.voicejournal"
      android:versionCode="2"
      android:versionName="1.1">
    <uses-sdk android:minSdkVersion="4" />

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".VoiceJournalActivity"
                  android:label="@string/app_name"
        		  android:theme="@style/CustomTheme.main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".EditJournalActivity"
        		  android:label="@string/app_name"
        		  android:theme="@style/CustomTheme.Black">
        </activity>
        
        <activity android:name=".JournalPreferenceActivity"
                  android:label="@string/pref_title">
        </activity>

    </application>
    
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
	
</manifest>